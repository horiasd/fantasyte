<%- include('../layouts/header') %>
    <% if(!league.draftHappened) { %>
        <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-dark text-white">
            <div class="col-md-5 p-lg-5 mx-auto my-5">
                <h1 class="display-4 font-weight-normal">Draft didnt happen yet</h1>
                <p class="lead font-weight-normal">Draft will take place at <%= niceDraftTimeFormat %>. 
                    You draft next beetween:
                    <%= niceFormatB %> and <%= niceFormatE %> 
                </p>
                <a class="btn btn-outline-light" href="/league/<%=league._id%>/draft">Draft your team</a>
            </div>
            <div class="product-device box-shadow d-none d-md-block"></div>
            <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
        </div>
    <% } else { %>
        <div class="container mt-5">
            <div class="row">
                <div class="col-6">
                    <% for(let player of team.playerNames) { %>
                        <p><%- player %></p>
                    <% } %>  
                </div>
            </div>
          </div>  
    <% } %>
<%- include('../layouts/footer') %>